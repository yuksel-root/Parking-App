@model AddCarModel



<form asp-action="AddCar" asp-controller="Home" method="post"
      class="w-75 mx-auto p-3" enctype="multipart/form-data">


    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">

        <label>@Model.CarCount Car Brand:</label>
        <span asp-validation-for="@Model.Brand" class="text-danger"></span>
        <input asp-for="@Model.Brand" class="form-control" />
    </div>

    <div class="form-group">
        <label>Car Plate:</label>
        <span asp-validation-for="@Model.Plate" class="text-danger"></span>
        <input asp-for="@Model.Plate" />
    </div>

    <div class="form-group">
        <label>Entry Date:</label>
        <span asp-validation-for="@Model.EntryDate" class="text-danger"></span>
        <input asp-for="@Model.EntryDate" class="form-control" />
    </div>

    <div class="form-group">
        <label>Expire Date:</label>
        <span asp-validation-for="@Model.ExpireDate" class="text-danger"></span>
        <input asp-for="@Model.ExpireDate" class="form-control" />
    </div>

    <div class="form-group">
        <label>Car Image</label>
        <input type="file" asp-for="@Model.Image" class="form-control-file" />
    </div>


    <div class="form-group">
        <button type="submit" asp-route-id="@Model.Id" class="btn btn-primary ">Enter</button>
    </div>
</form>

